    <h1 class="text-center mb-4">College Recommendation System</h1>

<form action="/recommendcet" method="POST" class="container">
  <!-- CET Score -->
  <div class="mb-3">
    <label for="cetScore" class="form-label">CET Score:</label>
    <input type="number" id="cetScore" name="cetScore" class="form-control" step="0.01" required>
  </div>
  

  <!-- University Selection -->
  <div class="mb-3">
    <label for="university" class="form-label">Select University:</label>
    <select id="university" name="university" class="form-select" required>
      <option value="Any">Any</option>
      <% universities.forEach(uni => { %>
        <option value="<%= uni %>"><%= uni %></option>
      <% }) %>
    </select>
  </div>

  <!-- Branch Selection -->
  <div class="mb-3">
    <label for="branch" class="form-label">Select Branch:</label>
    <select id="branch" name="branch" class="form-select" required>
      <% branches.forEach(br => { %>
        <option value="<%= br %>"><%= br %></option>
      <% }) %>
    </select>
  </div>

  <!-- Category Selection -->
  <div class="mb-3">
    <label for="category" class="form-label">Select Category:</label>
    <select id="category" name="category" class="form-select" required>
      <% categories.forEach(cat => { %>
        <option value="<%= cat %>"><%= cat %></option>
      <% }) %>
    </select>
  </div>

  <!-- Submit Button -->
  <button type="submit" class="btn btn-primary w-100">Get Recommendations</button>
</form>

